{%- comment -%}
  Renders a placeholder product card for when no collection is selected

  Usage:
  {% render 'product-card-placeholder' %}
{%- endcomment -%}

<article class="product-card product-card--placeholder">
  <div class="product-card__image-wrapper">
    {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder' }}
  </div>
  
  <div class="product-card__info">
    <h3 class="product-card__title">{{ 'onboarding.product_title' | t }}</h3>
    <p class="product-card__color">Color</p>
    <p class="product-card__price">{{ 8800 | money }}</p>
  </div>
</article>
