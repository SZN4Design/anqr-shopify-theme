[
  {
    "name": "theme_info",
    "theme_name": "ANQR Theme",
    "theme_version": "1.0.0",
    "theme_author": "Lovable",
    "theme_documentation_url": "https://docs.lovable.dev",
    "theme_support_url": "https://lovable.dev"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary colors"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background",
        "default": "#FAF8F5"
      },
      {
        "type": "color",
        "id": "color_foreground",
        "label": "Text",
        "default": "#3D3630"
      },
      {
        "type": "header",
        "content": "Accent colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary",
        "default": "#C4B5A5"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary",
        "default": "#F0E9E0"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent",
        "default": "#8B9A82"
      },
      {
        "type": "color",
        "id": "color_sand",
        "label": "Sand (header/footer)",
        "default": "#DDD5C8"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "cormorant_garamond_n4",
        "label": "Heading font",
        "info": "Selecting a different font can affect the speed of your store."
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 80,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading size",
        "default": 100
      },
      {
        "type": "header",
        "content": "Body"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "inter_n4",
        "label": "Body font",
        "info": "Selecting a different font can affect the speed of your store."
      },
      {
        "type": "range",
        "id": "body_scale",
        "min": 80,
        "max": 130,
        "step": 5,
        "unit": "%",
        "label": "Body size",
        "default": 100
      }
    ]
  },
  {
    "name": "Buttons",
    "settings": [
      {
        "type": "header",
        "content": "Button style"
      },
      {
        "type": "range",
        "id": "button_border_radius",
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px",
        "label": "Border radius",
        "default": 0
      },
      {
        "type": "range",
        "id": "button_padding_horizontal",
        "min": 16,
        "max": 48,
        "step": 4,
        "unit": "px",
        "label": "Horizontal padding",
        "default": 32
      },
      {
        "type": "range",
        "id": "button_padding_vertical",
        "min": 8,
        "max": 24,
        "step": 2,
        "unit": "px",
        "label": "Vertical padding",
        "default": 16
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "default": 1400,
        "unit": "px",
        "label": "Page width"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Space between sections",
        "default": 0
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://www.instagram.com/anqr"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://www.facebook.com/anqr"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest",
        "info": "https://www.pinterest.com/anqr"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok",
        "info": "https://www.tiktok.com/@anqr"
      },
      {
        "type": "header",
        "content": "Sharing options"
      },
      {
        "type": "image_picker",
        "id": "share_image",
        "label": "Default social sharing image"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer"
          },
          {
            "value": "page",
            "label": "Page"
          }
        ],
        "default": "drawer",
        "label": "Cart type"
      },
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "default": false,
        "label": "Enable cart note"
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "default": true,
        "label": "Enable predictive search"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_vendor",
        "default": false,
        "label": "Show product vendor"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_price",
        "default": true,
        "label": "Show product price"
      }
    ]
  }
]
