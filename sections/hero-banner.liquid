{%- style -%}
.hero-banner {
  {% if section.settings.image != blank %}
    background-image: url('{{ section.settings.image | image_url: width: 2000 }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  {% else %}
    background-color: var(--color-background);
  {% endif %}

  padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  text-align: center;
  position: relative;
}

/* Cream overlay (#FAF8F3 at 50%) */
.hero-banner::after {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(250, 248, 243, 0.5);
  z-index: 1;
}

.hero-banner__container {
  position: relative;
  z-index: 2;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

/* Subtitle ("Find Your") */
.hero-banner__subtitle {
  font-family: var(--font-body);
  font-size: 13px;
  letter-spacing: 0.25em;
  text-transform: uppercase;
  color: var(--color-foreground);
  opacity: 0.75;
  margin-bottom: 16px;
}

/* Main heading ("ANQR") */
.hero-banner__heading {
  font-family: var(--font-heading);
  font-size: clamp(42px, 9vw, 150px);
  font-weight: 300;
  letter-spacing: 0.18em;
  text-transform: uppercase;
  color: var(--color-foreground);
  margin: 0 0 32px;
  line-height: 0.9;
}

/* CTA button */
.hero-banner__button {
  display: inline-block;
  font-family: var(--font-body);
  font-size: 12px;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  color: var(--color-foreground);
  background: transparent;
  border: 1px solid var(--color-foreground);
  padding: 16px 32px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.hero-banner__button:hover {
  background-color: var(--color-foreground);
  color: var(--color-background);
}
{%- endstyle -%}

<section class="hero-banner" data-section-id="{{ section.id }}">
  <div class="hero-banner__container">
    {%- if section.settings.subtitle != blank -%}
      <p class="hero-banner__subtitle">{{ section.settings.subtitle }}</p>
    {%- endif -%}
    
    <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
    
    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="hero-banner__button">
        {{ section.settings.button_label }}
      </a>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section-hero-banner",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find Your"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "ANQR"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

