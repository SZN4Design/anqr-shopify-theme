{%- style -%}
.hero-banner {
  {% if section.settings.image != blank %}
    background-image: url('{{ section.settings.image | image_url: width: 2000 }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  {% else %}
    background-color: var(--color-background);
  {% endif %}

  padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  text-align: center;
  position: relative;
}

/* Cream overlay (#FAF8F3 at 50%) */
.hero-banner::after {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(250, 248, 243, 0.5);
  z-index: 1;
}

.hero-banner__container {
  position: relative;
  z-index: 2;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

/* Subtitle ("Find Your") */
.hero-banner__subtitle {
  font-family: var(--font-body);
  font-size: 13px;
  letter-spacing: 0.25em;
  text-transform: uppercase;
  color: var(--color-foreground);
  opacity: 0.75;
  margin-bottom: 16px;
}

/* Main heading ("ANQR") */
.hero-banner__heading {
  font-family: var(--font-heading);
  font-size: clamp(42px, 9vw, 150px); /* mobile â†’ desktop */
  font-weight: 300;
  letter-spacing: 0.18em;              /* adjust this for more/less spacing */
  text-transform: uppercase;
  color: var(--color-foreground);
  margin: 0 0 32px;
  line-height: 0.9;                    /* slightly tighter for luxury look */
}

/* CTA button */
.hero-banner__button {
  display: inline-block;
  font-family: var(--font-body);
  font-size: 12px;
  letter-spacing: 0.2em;
  text-transform: uppercase;
  color: var(--color-foreground);
  background: transparent;
  border: 1px solid var(--color-foreground);
  padding: 16px 32px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.hero-banner__button:hover {
  background-color: var(--color-foreground);
  color: var(--color-background);
}

/* (Optional) if you ever re-add an inline image instead of bg image */
.hero-banner__image {
  margin-top: 48px;
  width: 100%;
  max-width: 1200px;
  margin-left: auto;
  margin-right: auto;
}

.hero-banner__image img {
  width: 100%;
  height: auto;
  object-fit: cover;
}
{%- endstyle -%}
