{%- style -%}
  .hero-banner {
    background-color: var(--color-background);
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    text-align: center;
  }
  
  .hero-banner__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .hero-banner__subtitle {
    font-family: var(--font-body);
    font-size: 12px;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-foreground);
    opacity: 0.7;
    margin-bottom: 16px;
  }
  
  .hero-banner__heading {
    font-family: var(--font-heading);
    font-size: 72px;
    font-weight: 300;
    letter-spacing: 0.1em;
    color: var(--color-foreground);
    margin: 0 0 32px;
    line-height: 1;
  }
  
  @media screen and (min-width: 750px) {
    .hero-banner__heading {
      font-size: 120px;
    }
  }
  
  @media screen and (min-width: 990px) {
    .hero-banner__heading {
      font-size: 160px;
    }
  }
  
  .hero-banner__button {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 12px;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-foreground);
    background: transparent;
    border: 1px solid var(--color-foreground);
    padding: 16px 32px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .hero-banner__button:hover {
    background-color: var(--color-foreground);
    color: var(--color-background);
  }
  
  .hero-banner__image {
    margin-top: 48px;
    width: 100%;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .hero-banner__image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
{%- endstyle -%}

<section class="hero-banner" data-section-id="{{ section.id }}">
  <div class="hero-banner__container">
    {%- if section.settings.subtitle != blank -%}
      <p class="hero-banner__subtitle">{{ section.settings.subtitle }}</p>
    {%- endif -%}
    
    <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
    
    {%- if section.settings.button_label != blank -%}
      <a href="{{ section.settings.button_link }}" class="hero-banner__button">
        {{ section.settings.button_label }}
      </a>
    {%- endif -%}
    
    {%- if section.settings.image != blank -%}
      <div class="hero-banner__image">
        <img 
          src="{{ section.settings.image | image_url: width: 1200 }}" 
          alt="{{ section.settings.image.alt | default: section.settings.heading }}"
          width="{{ section.settings.image.width }}"
          height="{{ section.settings.image.height }}"
          loading="eager"
        >
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section-hero-banner",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Find Your"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "ANQR"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
