{%- style -%}
  .color-swatches {
    background-color: var(--color-background);
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  
  .color-swatches__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .color-swatches__heading {
    font-family: var(--font-heading);
    font-size: 32px;
    font-weight: 300;
    text-align: center;
    color: var(--color-foreground);
    margin: 0 0 48px;
  }
  
  @media screen and (min-width: 750px) {
    .color-swatches__heading {
      font-size: 40px;
    }
  }
  
  .color-swatches__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
    max-width: 600px;
    margin: 0 auto;
  }
  
  @media screen and (min-width: 750px) {
    .color-swatches__grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 32px;
    }
  }
  
  .color-swatches__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    text-decoration: none;
  }
  
  .color-swatches__swatch {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    transition: transform 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  @media screen and (min-width: 750px) {
    .color-swatches__swatch {
      width: 80px;
      height: 80px;
    }
  }
  
  .color-swatches__item:hover .color-swatches__swatch {
    transform: scale(1.1);
  }
  
  .color-swatches__label {
    font-family: var(--font-body);
    font-size: 14px;
    letter-spacing: 0.05em;
    color: var(--color-foreground);
    transition: opacity 0.3s ease;
  }
  
  .color-swatches__item:hover .color-swatches__label {
    opacity: 0.7;
  }
{%- endstyle -%}

<section class="color-swatches" data-section-id="{{ section.id }}">
  <div class="color-swatches__container">
    {%- if section.settings.heading != blank -%}
      <h2 class="color-swatches__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    <div class="color-swatches__grid">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link }}" class="color-swatches__item" {{ block.shopify_attributes }}>
          <div class="color-swatches__swatch" style="background-color: {{ block.settings.color }};"></div>
          <span class="color-swatches__label">{{ block.settings.label }}</span>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Color Swatches",
  "tag": "section",
  "class": "section-color-swatches",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Color"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 64
    }
  ],
  "blocks": [
    {
      "type": "color",
      "name": "Color",
      "settings": [
        {
          "type": "color",
          "id": "color",
          "label": "Color",
          "default": "#8B9A82"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Sage"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Color Swatches",
      "blocks": [
        {
          "type": "color",
          "settings": {
            "color": "#8B9A82",
            "label": "Sage"
          }
        },
        {
          "type": "color",
          "settings": {
            "color": "#D4A5A5",
            "label": "Rose"
          }
        },
        {
          "type": "color",
          "settings": {
            "color": "#F5F0E8",
            "label": "Cream"
          }
        },
        {
          "type": "color",
          "settings": {
            "color": "#C4846C",
            "label": "Terracotta"
          }
        }
      ]
    }
  ]
}
{% endschema %}
