{%- style -%}
  .collection-banner {
    background-color: var(--color-background);
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  
  .collection-banner__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
    text-align: center;
  }
  
  .collection-banner__title {
    font-family: var(--font-heading);
    font-size: 40px;
    font-weight: 300;
    color: var(--color-foreground);
    margin: 0 0 16px;
  }
  
  @media screen and (min-width: 750px) {
    .collection-banner__title {
      font-size: 56px;
    }
  }
  
  .collection-banner__description {
    font-family: var(--font-body);
    font-size: 15px;
    line-height: 1.7;
    color: var(--color-foreground);
    opacity: 0.7;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .collection-banner__image {
    margin-top: 32px;
    aspect-ratio: 21 / 9;
    overflow: hidden;
  }
  
  .collection-banner__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
{%- endstyle -%}

<section class="collection-banner" data-section-id="{{ section.id }}">
  <div class="collection-banner__container">
    <h1 class="collection-banner__title">{{ collection.title }}</h1>
    
    {%- if section.settings.show_collection_description and collection.description != blank -%}
      <div class="collection-banner__description">
        {{ collection.description }}
      </div>
    {%- endif -%}
    
    {%- if section.settings.show_collection_image and collection.image -%}
      <div class="collection-banner__image">
        <img
          src="{{ collection.image | image_url: width: 1400 }}"
          alt="{{ collection.image.alt | default: collection.title | escape }}"
          width="{{ collection.image.width }}"
          height="{{ collection.image.height }}"
          loading="eager"
        >
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Collection Banner",
  "tag": "section",
  "class": "section-collection-banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "label": "Show collection description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "label": "Show collection image",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 28
    }
  ]
}
{% endschema %}
