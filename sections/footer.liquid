{%- style -%}
  .footer {
    background-color: var(--color-sand);
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  
  .footer__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
  }
  
  @media screen and (min-width: 750px) {
    .footer__grid {
      grid-template-columns: 1.5fr repeat(3, 1fr);
      gap: 48px;
    }
  }
  
  .footer__brand-name {
    font-family: var(--font-heading);
    font-size: 24px;
    font-weight: 500;
    color: var(--color-foreground);
    margin: 0 0 16px;
  }
  
  .footer__brand-text {
    font-family: var(--font-body);
    font-size: 14px;
    line-height: 1.6;
    color: var(--color-foreground);
    opacity: 0.7;
    margin: 0;
    max-width: 280px;
  }
  
  .footer__column-heading {
    font-family: var(--font-body);
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--color-foreground);
    margin: 0 0 16px;
  }
  
  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer__links li {
    margin-bottom: 8px;
  }
  
  .footer__links a {
    font-family: var(--font-body);
    font-size: 14px;
    color: var(--color-foreground);
    opacity: 0.7;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }
  
  .footer__links a:hover {
    opacity: 1;
  }
  
  .footer__bottom {
    margin-top: 48px;
    padding-top: 32px;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
  }
  
  @media screen and (min-width: 750px) {
    .footer__bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }
  
  .footer__copyright {
    font-family: var(--font-body);
    font-size: 12px;
    color: var(--color-foreground);
    opacity: 0.7;
    margin: 0;
  }
  
  .footer__legal-links {
    display: flex;
    gap: 24px;
  }
  
  .footer__legal-link {
    font-family: var(--font-body);
    font-size: 12px;
    color: var(--color-foreground);
    opacity: 0.7;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }
  
  .footer__legal-link:hover {
    opacity: 1;
  }
{%- endstyle -%}

<footer class="footer" data-section-id="{{ section.id }}">
  <div class="footer__container">
    <div class="footer__grid">
      <!-- Brand column -->
      <div class="footer__brand">
        <h2 class="footer__brand-name">{{ shop.name }}</h2>
        {%- if section.settings.brand_text != blank -%}
          <p class="footer__brand-text">{{ section.settings.brand_text }}</p>
        {%- endif -%}
      </div>
      
      <!-- Menu columns -->
      {%- for block in section.blocks -%}
        <div class="footer__column" {{ block.shopify_attributes }}>
          {%- if block.settings.heading != blank -%}
            <h3 class="footer__column-heading">{{ block.settings.heading }}</h3>
          {%- endif -%}
          
          {%- if block.settings.menu != blank -%}
            <ul class="footer__links">
              {%- for link in block.settings.menu.links -%}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
    
    <div class="footer__bottom">
      <p class="footer__copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'footer.copyright' | t }}
      </p>
      
      <div class="footer__legal-links">
        {%- if section.settings.privacy_link != blank -%}
          <a href="{{ section.settings.privacy_link }}" class="footer__legal-link">
            {{ 'footer.privacy_policy' | t }}
          </a>
        {%- endif -%}
        {%- if section.settings.terms_link != blank -%}
          <a href="{{ section.settings.terms_link }}" class="footer__legal-link">
            {{ 'footer.terms_of_service' | t }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "textarea",
      "id": "brand_text",
      "label": "Brand text",
      "default": "Mindful movement wear designed for balance."
    },
    {
      "type": "url",
      "id": "privacy_link",
      "label": "Privacy policy link"
    },
    {
      "type": "url",
      "id": "terms_link",
      "label": "Terms of service link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Shop"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "menu",
          "settings": {
            "heading": "Shop"
          }
        },
        {
          "type": "menu",
          "settings": {
            "heading": "About"
          }
        },
        {
          "type": "menu",
          "settings": {
            "heading": "Support"
          }
        }
      ]
    }
  ]
}
{% endschema %}
