{%- style -%}
  .featured-collection {
    background-color: var(--color-background);
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  
  .featured-collection__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
  }
  
  .featured-collection__subtitle {
    font-family: var(--font-body);
    font-size: 12px;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-foreground);
    opacity: 0.7;
    text-align: center;
    margin-bottom: 16px;
  }
  
  .featured-collection__heading {
    font-family: var(--font-heading);
    font-size: 32px;
    font-weight: 300;
    text-align: center;
    color: var(--color-foreground);
    margin: 0 0 48px;
  }
  
  .featured-collection__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;
    max-width: 1000px;
    margin: 0 auto;
  }
  
  @media screen and (min-width: 750px) {
    .featured-collection__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 48px;
    }
  }
  
  .featured-collection__view-all {
    text-align: center;
    margin-top: 48px;
  }
  
  .featured-collection__view-all-link {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 12px;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-foreground);
    background: transparent;
    border: 1px solid var(--color-foreground);
    padding: 16px 32px;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .featured-collection__view-all-link:hover {
    background-color: var(--color-foreground);
    color: var(--color-background);
  }
{%- endstyle -%}

<section class="featured-collection" data-section-id="{{ section.id }}">
  <div class="featured-collection__container">
    {%- if section.settings.subtitle != blank -%}
      <p class="featured-collection__subtitle">{{ section.settings.subtitle }}</p>
    {%- endif -%}
    
    {%- if section.settings.heading != blank -%}
      <h2 class="featured-collection__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    
    {%- if section.settings.collection != blank -%}
      <div class="featured-collection__grid">
        {%- for product in section.settings.collection.products limit: section.settings.products_to_show -%}
          {% render 'product-card', product: product %}
        {%- endfor -%}
      </div>
      
      {%- if section.settings.show_view_all -%}
        <div class="featured-collection__view-all">
          <a href="{{ section.settings.collection.url }}" class="featured-collection__view-all-link">
            {{ 'collections.general.view_all' | t }}
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="featured-collection__grid">
        {%- for i in (1..3) -%}
          {% render 'product-card-placeholder' %}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "tag": "section",
  "class": "section-featured-collection",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Essential Movement"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 3,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 64
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 64
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}
